# Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================================================
# Environment
# ============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# ============================================================================
# Service Configuration
# ============================================================================
SERVICE_NAME=llm-teaching-service
HOST=0.0.0.0
PORT=8080

# ============================================================================
# Ollama Configuration
# ============================================================================
OLLAMA_URL=http://localhost:11434
OLLAMA_TIMEOUT=30

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600

# ============================================================================
# Google Cloud Configuration
# ============================================================================
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# ============================================================================
# Firebase Configuration (Optional)
# ============================================================================
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json

# ============================================================================
# OpenAI Configuration (Optional - for premium models)
# ============================================================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG=your-openai-org

# ============================================================================
# Anthropic Configuration (Optional - for Claude)
# ============================================================================
ANTHROPIC_API_KEY=your-anthropic-api-key

# ============================================================================
# Model Configuration
# ============================================================================
MODEL_CONFIG_PATH=config/models.yaml
DEFAULT_MODEL=phi3-mini-educational
ENABLE_PREMIUM_MODELS=false

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================================
# Monitoring & Observability
# ============================================================================
ENABLE_MONITORING=true
ENABLE_TRACING=true

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=*
